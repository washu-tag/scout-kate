loki:
  analytics:
    reporting_enabled: false
  auth_enabled: false
  commonConfig:
    replication_factor: 1
  schemaConfig:
    configs:
      - from: '2024-04-01'
        store: tsdb
        object_store: s3
        schema: v13
        index:
          prefix: loki_index_
          period: 24h
  pattern_ingester:
    enabled: true
  limits_config:
    allow_structured_metadata: true
    volume_enabled: true
    retention_period: 672h
  ruler:
    enable_api: true
  storage:
    type: s3
    bucketNames:
      chunks: '{{ loki_chunks_bucket }}'
      ruler: '{{ loki_ruler_bucket }}'
      admin: '{{ loki_admin_bucket }}'
    s3:
{% if not aws_deployment %}
      endpoint: 'minio.{{ minio_tenant_namespace }}.svc.cluster.local'
      insecure: true
      s3ForcePathStyle: true
{% endif %}
      region: '{{ s3_region }}'

minio:
  enabled: false

{% if aws_deployment %}
serviceAccount:
  create: false
  name: '{{ loki_writer_service_account_name }}'
{% endif %}
deploymentMode: SingleBinary

singleBinary:
  replicas: 1
  persistence:
    enabled: true
{% if loki_storage_class is defined and loki_storage_class %}
    storageClass: '{{ loki_storage_class }}'
{% endif %}
  resources: {{ loki_resources_default | combine(loki_resources | default({}), recursive=true) | to_json }}
{% if not aws_deployment %}
  extraEnv:
    - name: AWS_ACCESS_KEY_ID
      valueFrom:
        secretKeyRef:
          name: loki-secrets
          key: AWS_ACCESS_KEY_ID
    - name: AWS_SECRET_ACCESS_KEY
      valueFrom:
        secretKeyRef:
          name: loki-secrets
          key: AWS_SECRET_ACCESS_KEY
{% endif %}

# Zero out replica counts of other deployment modes
backend:
  replicas: 0
read:
  replicas: 0
write:
  replicas: 0

ingester:
  replicas: 0
querier:
  replicas: 0
queryFrontend:
  replicas: 0
queryScheduler:
  replicas: 0
distributor:
  replicas: 0
compactor:
  replicas: 0
indexGateway:
  replicas: 0
bloomCompactor:
  replicas: 0
bloomGateway:
  replicas: 0

# Memcached cache configuration
# Loki uses memcached for two caching layers:
# - chunksCache: Caches log chunks to reduce S3 fetches
# - resultsCache: Caches query results for repeated queries
# Override in inventory.yaml if needed (e.g., production may need larger caches)
chunksCache:
  enabled: true
  allocatedMemory: {{ loki_chunks_cache_allocated_memory }}  # MB, default 8192

resultsCache:
  enabled: true
  allocatedMemory: {{ loki_results_cache_allocated_memory }}  # MB, default 1024
